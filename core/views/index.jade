!!! 5
html
  head
    title AMP - Media Player
    
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Organise your music easy')
    meta(name='author', content='Simon Mudd')
    
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/typeahead.css')
    link(rel='stylesheet/less', href='/stylesheets/styles.css')

    script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/less.js/1.7.0/less.min.js')

  body
    
    div(class='background-cover', background='browser')
    div(class='background-cover hidden', background='music')
    div(class='background-cover hidden', background='movies')
    div(class='background-cover hidden', background='images')
    div(class='background-cover hidden', background='file_manager')
    div(class='background-cover hidden', background='settings')

    div(class='pl30 pr30')

      h1(title, class='birth ml30 nmt') AMP

      div.row
        include menu.jade
        
      div(id='music_search_row', class='row hidden', search-row, related='music')
        include music_search_bar.jade
        include soundcloud_search_bar.jade

      div(id='movies_search_row', class='row hidden', search-row, related='movies')
        include movies_search_bar.jade
        include youtube_search_bar.jade

      div(id='images_search_row', class='row hidden', search-row, related='images')
        include images_search_bar.jade
        include bing_image_search_bar.jade

      div(id='file_manager_search_row', class='row hidden', search-row, related='file_manager')
        include file_search_bar.jade
        include bing_search_bar.jade

      div(id='browser_container', class='row mt40', container, related='browser')
        div(class='col-md-12', main, box)
          include web_search.jade
        
      div(id='music_container', class='row mt40 hidden', container, related='music')
        include music_player.jade

      div(id='movies_container', class='row mt40 hidden', container, related='movies')
        div(class='col-md-12', main, box)
          include video_player.jade

      div(id='images_container', class='row mt30 hidden', container, related='images')
        div(class='col-md-12', main, box)

      div(id='file_manager_container', class='row mt30 hidden', container, related='file_manager')
        div(class='col-md-12', main, box)

      div(id='settings_container', class='row mt30 hidden', container, related='settings')
        include settings_manager.jade

    include player_controls_bar.jade

  include scripts.jade